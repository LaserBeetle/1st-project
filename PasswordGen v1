import string
import random

print("Welcome to Password Generator.\n")

cha = int(input("Please tell me how many characters you want in your password.\n"))

num = int(input("Please tell me how many numbers you want in your password.\n"))

sym = int(input("Please tell me how many symbols you want in your password.\n"))

cha_list = list(string.ascii_letters)
num_list = list(string.digits)
sym_list = list(string.punctuation)

cha_pass = []
num_pass = []
sym_pass = []

while cha > 0 or num > 0 or sym > 0:
  if cha > 0:
    cha_rng = random.randint(0, len(cha_list)-1)
    cha_pass.append(cha_list[cha_rng])
    cha -= 1

  if num > 0:
    num_rng = random.randint(0, len(num_list)-1)
    num_pass.append(num_list[num_rng])
    num -= 1

  if sym > 0:
    sym_rng = random.randint(0, len(sym_list)-1)
    sym_pass.append(sym_list[sym_rng])
    sym -= 1

password = cha_pass + num_pass + sym_pass

print("Your new password is:\n")
print("".join(password))
