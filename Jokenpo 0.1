import random
tie = 'Tie! Try again.'
lose = 'You lose! Try again.'
win = 'You win! Congratulations.'

while True:
	a = int(input('Please choose 1 for rock, 2 for paper or 3 for scissors: '))
	b = random.randint(1,3)
	if a==1 and b==1:
		print(tie)
	elif a==1 and b==2:
		print(lose)
	elif a==1 and b==3:
		print(win)

	elif a==2 and b==1:
		print(win)
	elif a==2 and b==2:
		print(tie)
	elif a==2 and b==3:
		print(lose)

	elif a==3 and b==1:
		print(lose)
	elif a==3 and b==2:
		print(win)
	elif a==3 and b==3:
		print(tie)
	
		continue

